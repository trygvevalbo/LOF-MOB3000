<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noeTaptNoeFunnetAPP">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Alle rettigheter som trenges for funksjonaliteten av denne appen -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCEPT_HANDOVER" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.example.noeTaptNoeFunnetAPP.post_item.MapsFullScreenActivity"
            android:label="@string/title_activity_maps_full_screen">

        </activity>

        <activity
            android:name="com.example.noeTaptNoeFunnetAPP.ItemViewActivity"
            android:parentActivityName="com.example.noeTaptNoeFunnetAPP.FrontPage">

        </activity>

        <activity android:name="com.example.noeTaptNoeFunnetAPP.post_item.PostLostItem" />
        <activity android:name="com.example.noeTaptNoeFunnetAPP.post_item.PostFoundItem" />
        <activity
            android:name="com.example.noeTaptNoeFunnetAPP.FrontPage"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>