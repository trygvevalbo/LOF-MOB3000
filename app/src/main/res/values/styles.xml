<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MainAccent</item>
        <item name="colorPrimaryDark">@color/MainBackground</item>
        <item name="colorAccent">@color/SecondaryAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/thonking</item>
    </style>

    <style name="Materialtheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/MainAccent</item>
        <item name="colorPrimaryDark">@color/MainBackground</item>
        <item name="colorAccent">@color/SecondaryAccent</item>
    </style>
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>


</resources>